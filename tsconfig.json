{
    "compileOnSave": true,
    "compilerOptions": {
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "module": "es2015",
        "target": "es5",
        "removeComments": true,
        "downlevelIteration": true,
        "lib": [
            "es2015",
            "es2015.symbol",
            "es2015.symbol.wellknown",
            "es2015.iterable"
        ],
        "declaration": true,
        "declarationDir": "dist/types"
    },
    "include": [
        "src"
    ]
}
